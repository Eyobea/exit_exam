<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>questions page</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <style>
      body{
        background-color: rgb(157, 186, 194) ;
        justify-content: center;
        font-family: sans-serif;
      }
      .card{
        margin-top: 30px;
        margin-left: 30px;
        margin-right: 30px;
        width: 1000px;
        /* display: flex;
        justify-content: center; */
      }
      .cardbody{
        margin: 20px;
      }
      button{
        padding: 50px;
        margin: 10px 30px 10px 30px ;
      }
      .question{
        margin: 5px;
      }
    </style>
  </head>

  <body>
    <div class="container-fluid">
      <!-- Navbar -->
      <%- include('./partials/navbarstudent') %>
      <!-- End navbar -->
      <div class="container">
        <form action="/admin/questions" method="post">
          <div class="mb-3">
            <select
              class="form-select"
              aria-label="Default select example"
              name="examId"
            >
              <% data.forEach(element => { %>
              <option value="<%= element.id %>"><%= element.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="container">
            <% for (let i = 1; i <= 10; i++) { %>
              <div class="card">
                <div class="cardbody">
              
            <h3>question <%= i %></h3>
            <textarea
              name="questions[<%= i %>][question]"
              placeholder="Enter the question"
              required
            ></textarea> <br>
            <input
              type="text"
              name="questions[<%= i %>][optionA]"
              placeholder="Option A"
              required
            /> <br>
            <input
              type="text"
              name="questions[<%= i %>][optionB]"
              placeholder="Option B"
              required
            /> <br>
            <input
              type="text"
              name="questions[<%= i %>][optionC]"
              placeholder="Option C"
              required
            /> <br>
            <input
              type="text"
              name="questions[<%= i %>][optionD]"
              placeholder="Option D"
              required
            /> <br>
            <label for="answer<%= i %>">Correct Answer:</label><br />
            <input
              type="radio"
              id="answer<%= i %>"
              name="questions[<%= i %>][answer]"
              value="1"
              required
            /> 
            Option A<br />
            <input
              type="radio"
              id="answer<%= i %>"
              name="questions[<%= i %>][answer]"
              value="2"
            />
            Option B<br />
            <input
              type="radio"
              id="answer<%= i %>"
              name="questions[<%= i %>][answer]"
              value="3"
            />
            Option C<br />
            <input
              type="radio"
              id="answer<%= i %>"
              name="questions[<%= i %>][answer]"
              value="4"
            />
            Option D<br />
            <hr />
          </div>
        </div>
            <% } %>
            <button type="submit" class="btn btn-primary">
              Submit Questions
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
